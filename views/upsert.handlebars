<section class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Order details</h2>
    </div>
    <form method="post" action="/upsert">
      {{#if order}}
      <input type="hidden" name="id" value="{{order.id}}" />
      {{/if}}
      <div class="mdl-card__supporting-text">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <select name="sourceCity" id="sourceCity" class="mdl-textfield__dropdown" value="{{order.sourceCity}}">
              <option value="delhi">Delhi</option>
              <option value="mumbai">Mumbai</option>
              <option value="chennai">Chennai</option>
          </select>
          <label class="mdl-textfield__label" for="sourceCity">Source City:</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <select name="destinationCity" id="destinationCity" class="mdl-textfield__dropdown" value="{{order.destinationCity}}">
              <option value="delhi">Delhi</option>
              <option value="mumbai">Mumbai</option>
              <option value="chennai">Chennai</option>
          </select>
          <label class="mdl-textfield__label" for="destinationCity">Destination City:</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <select name="truckNumber" id="truckNumber" class="mdl-textfield__dropdown" value="{{order.truckNumber}}">
              <option value="KA19P8488">KA19P8488</option>
              <option value="KA14A1478">KA14A1478</option>
              <option value="chennai">DL8CAC4194</option>
          </select>
          <label class="mdl-textfield__label" for="truckNumber">Truck Number:</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="date" name="departureDate" value="{{order.departureDate}}">
          <label class="mdl-textfield__label" for="departureDate">Departure Date:</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="date" name="arrivalDate" value="{{order.arrivalDate}}">
          <label class="mdl-textfield__label" for="arrivalDate">Arrival Date:</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="number" name="boggieNumber" value="{{order.boggieNumber}}">
          <label class="mdl-textfield__label" for="boggieNumber">Boggie Number:</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="number" name="wheelsCount" value="{{order.wheelsCount}}">
          <label class="mdl-textfield__label" for="wheelsCount">Number of Wheels:</label>
        </div>
        
      </div>
      <div class="mdl-card__actions">
        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--colored mdl-button--raised">
          {{#if order}}Save{{else}}Create{{/if}}
        </button>
        <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/">Cancel</a>
      </div>
    </form>
  </div>
</section>
